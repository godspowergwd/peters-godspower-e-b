# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL example)
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketing_app_db

# JWT Configuration
JWT_SECRET=your_very_strong_jwt_secret_key
JWT_EXPIRES_IN=1h # e.g., 1h, 7d

# Email Service (e.g., SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@example.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_yourstripesecretkey # Your Stripe secret key
STRIPE_PUBLISHABLE_KEY=pk_test_yourstripepublishablekey # Your Stripe publishable key
STRIPE_WEBHOOK_SECRET=whsec_yourstripewebhooksecret # Your Stripe webhook signing secret for verifying webhook events
STRIPE_SUCCESS_URL=http://localhost:3000/payment-success?session_id={CHECKOUT_SESSION_ID} # Client URL for successful payment
STRIPE_CANCEL_URL=http://localhost:3000/payment-cancelled # Client URL for cancelled payment

# Client URL
CLIENT_URL=http://localhost:3000

# Admin User Seeding (Development Only)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminSecurePassword123!
